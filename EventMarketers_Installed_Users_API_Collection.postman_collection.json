  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate device ID if not set",
          "if (!pm.variables.get('device_id') || pm.variables.get('device_id') === 'test-device-123') {",
          "    pm.variables.set('device_id', 'device-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9));",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract customer ID from conversion response",
          "if (pm.response.code === 201 && pm.response.json().customer) {",
          "    pm.variables.set('customer_id', pm.response.json().customer.id);",
          "}"
        ]
      }
    }
  ]
